//app.js
const express = require('express');
const app = express();
app.set('view engine', 'ejs');
app.get('/', (req, res) => res.render('index', { name: 'Anjali' }));
app.listen(3000, () => console.log('Running on http://localhost:3000'));
//views/index.ejs
<h2>Hello <%= name %>!</h2>

OUTPUT
Hello Anjali!
